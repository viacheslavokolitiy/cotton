<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/perm_item_margin_left"
    android:layout_marginRight="@dimen/perm_item_margin_right"
    android:id="@+id/permission_card"
    android:layout_marginTop="@dimen/perm_item_margin_top"
    android:layout_marginBottom="@dimen/perm_item_margin_bottom"
    app:cardCornerRadius="@dimen/perm_item_corner_radius">
    <org.satorysoft.cotton.ui.view.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:id="@+id/permission_name"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>